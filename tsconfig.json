{
  "compilerOptions": {
    "allowSyntheticDefaultImports":true,
    "baseUrl": "src/",
    "outDir": "./out-tsc",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es2015",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["./src/**/*"]
}